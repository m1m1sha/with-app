{
  "$schema": "./schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "shell:allow-open",
    {
      "identifier": "fs:read-all",
      "allow": [{ "path": "**/**" }]
    },
    {
      "identifier": "fs:read-dirs",
      "allow": [{ "path": "**/**" }]
    },
    {
      "identifier": "fs:read-files",
      "allow": [{ "path": "**/**" }]
    },
    {
      "identifier": "fs:read-meta",
      "allow": [{ "path": "**/**" }]
    },
    {
      "identifier": "fs:write-all",
      "allow": [{ "path": "**/**" }]
    },
    {
      "identifier": "fs:write-files",
      "allow": [{ "path": "**/**" }]
    }
  ]
}
