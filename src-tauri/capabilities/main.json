{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "path:default",
    "event:default",
    "app:default",
    "resources:default",
    "menu:default",
    "tray:default",
    "window:allow-start-dragging",
    "window:allow-minimize",
    "window:allow-close",
    "fs:read-all",
    "fs:write-all",
    {
      "identifier": "fs:scope",
      "allow": [{ "path": "*/**" }]
    }
  ]
}
